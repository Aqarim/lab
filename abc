void movement_with_the_keyboard(int width, int hight) {
	setfillstyle(1,0);
	bar (0,0,width,hight);
	
	int x=(width/2), y=(hight/2); //íà÷àëüíîå ïîëîæåíèå
	
	while(1) {
		draw(x,y,15); //ðèñóåì îáúåêò, ñîãëàñíî ñòàðîòîâóìó ïîëîæåíèþ
		int code=getch(); //íàæàòèå êëàâèøè
		if (code==27) //åñëè íàæàòî "Esc" - âûõîä
			break;
		draw(x,y,0); //ñòèðàåì îáúåêò
		switch(code) {
		case 75: x--; //åñëè íàæàòî "ñòðåëêà âëåâî" äâèãàåìñÿ âïðàâî
			break; 
		case 77: x++; //åñëè íàæàòî "ñòðåëêà âïðàâî" äâèãàåìñÿ âïðàâî
			break;
    	case 72: y--; //åñëè íàæàòî "ñòðåëêà ââåðõ" äâèãàåìñÿ âïðàâî
			break;
    	case 80: y++; //åñëè íàæàòî "ñòðåëêà âíèç" äâèãàåìñÿ âïðàâî
    	}
	}
}
