#include <stdio.h>
#include <stdlib.h>

const int N=5;

int main() {
	int a=0, b=10;
	double m[N][N];
	double sum;
	
	//заполнение массива рандомными числами//
	for(int i=0; i<N; i++) {
		for(int j=0; j<N; j++) {
			m[i][j]=(double)rand()*(b - a)/RAND_MAX + a;
		}
	}
	
	//вывод матрицы на экран//
	printf("Matrix before:\n");
	for(int i=0; i<N; i++) { 
 		for (int j = 0; j<N; j++) {
       		printf("%lf ",m[i][j]);
       }
	printf("\n");
	}
	
	//подсчет суммы в строке и деление каждого элемента строки на эту сумму//
	for(int i=0; i<N; i++) {
		for(int j=0; j<N; j++) {
			sum+=m[i][j];
		}
		for(int j=0; j<N; j++) {
			m[i][j]/=sum;
		}
		sum=0;
	}
	
	printf("\n");
	
	//вывод матрицы на экран после измениний//
	printf("Matrix after:\n");
	for(int i=0; i<N; i++) { 
 		for (int j = 0; j<N; j++) {
       		printf("%lf ",m[i][j]);
       }
	printf("\n");
	}	
}
