#include <stdlib.h>
#include <stdio.h>
#include <math.h>

int main () {
    double y, a, b, c, h, min, max, x;
    
    a=2.14;
    b=-4.21;
    c=3.25;
    h=0.5;
    
    min=(a*(-4.5)*(-4.5)+b*(-4.5)+c)*sin(-4.5);
    max=(a*(-4.5)*(-4.5)+b*(-4.5)+c)*sin(-4.5);
    
    for (x=-5.0; x>=-13.5;) {
        y=(a*x*x+b*x+c)*sin(x);
        
        if (y<min) min=y;
        if (y>max) max=y;
        
        x=x-h;
    }
    
    printf("min=%lf\n",min);
    printf("max=%lf\n",max);
    
    system("PAUSE");
}
