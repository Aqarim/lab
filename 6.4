#include <stdio.h>
#include <stdlib.h>

int main() {
	char num_card[16];
	printf("Input card number: ");
	gets(num_card);
	int num[16];
	int sum, a;
	
	for(int i=0; i<16; i++) {
		num[i]=num_card[i]-48;
	}
	
	for(int i=0; i<16; i++) {
		if (i%2!=0) sum+=num[i];
			else {
				a=num[i]*2;
				if (a>10) sum+=a-9;
					else sum+=a;
			}
	}
	if (sum%10==0) printf("Card is correct");
		else printf("Card is not correct");
}
