#include <stdlib.h>
#include <stdio.h>

int random (int N) {
	return rand()%N;
}

int main () {
	int array[20];
	int a=-10, b=10;
	
	for (int i=0; i<20; ++i) {
		array[i]=random(b-a+1)+a;
		printf("%d ",array[i]);
	}
	
	printf("\n");
	printf("Numbers >0:\n");
	for (int i=0; i<20; ++i) {
		if (array[i]>0) printf("%d ",array[i]);
	}
	
	printf("\n");
	printf("Numbers <0:\n");
	for (int i=0; i<20; ++i) {
		if (array[i]<0) printf("%d ",array[i]);
	}
}
